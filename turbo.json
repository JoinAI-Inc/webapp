{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                ".next/**",
                "!.next/cache/**",
                "dist/**",
                "build/**"
            ],
            "env": [
                "DATABASE_URL",
                "NANO_BANANA_API_KEY",
                "NEXT_PUBLIC_API_BASE_URL",
                "NEXT_PUBLIC_APP_ID",
                "NEXT_PUBLIC_GOOGLE_CLIENT_ID"
            ]
        },
        "lint": {},
        "dev": {
            "cache": false,
            "persistent": true
        },
        "db:generate": {
            "cache": false
        },
        "db:push": {
            "cache": false
        }
    }
}